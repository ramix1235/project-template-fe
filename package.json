{
  "name": "monorepo",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "pnpm run --filter project dev",
    "build": "pnpm run --filter project build",
    "build:development": "pnpm run --filter project build:development",
    "build:staging": "pnpm run --filter project build:staging",
    "preview": "pnpm run --filter project preview",
    "typecheck": "tsc --noEmit",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "csslint:fix": "stylelint \"**/*.{css,scss}\" --fix",
    "formatter:fix": "prettier . --write",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "codegen:openapi": "pnpm run --filter project codegen:openapi"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "eslint": "^8.57.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "meow": "^9.0.0",
    "prettier": "^3.3.3",
    "stylelint": "^16.8.2",
    "stylelint-config-recess-order": "^5.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.7.1"
}
